{
  "name": "lottie-json-preview",
  "displayName": "Lottie JSON Preview",
  "description": "Preview Lottie animations directly in VS Code with live reload and playback controls",
  "version": "1.0.0",
  "publisher": "yellow10041",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#0d1117",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/stars/yellow10041/lottie-json-preview?style=social",
      "href": "https://github.com/yellow10041/lottie-json-preview",
      "description": "Star on GitHub"
    }
  ],
  "homepage": "https://github.com/yellow10041/lottie-json-preview",
  "bugs": {
    "url": "https://github.com/yellow10041/lottie-json-preview/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "lottie",
    "animation",
    "json",
    "preview",
    "motion",
    "lottiefiles",
    "bodymovin"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lottiePreview.open",
        "title": "Open Lottie Preview",
        "category": "Lottie"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "cd webview-ui && npm run build",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmytro/lottie-json-preview"
  },
  "license": "MIT"
}
